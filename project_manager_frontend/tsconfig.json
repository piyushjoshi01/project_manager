{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@hooks/*": ["hooks/*"],
      "@types/*": ["types/*"],
      "@components/*": ["components/*"],
      "@pages/*":["pages/*"]
    }
  },
  "include": ["src"]
}
